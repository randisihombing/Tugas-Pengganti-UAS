<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_nama_tempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Nama Tempat"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_alamat"
        style="@style/Base.Theme.AppCompat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHighlight="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Kampung gajah"
        app:layout_constraintTop_toTopOf="@id/tv_nama_tempat"
        app:layout_constraintBottom_toBottomOf="@id/tv_nama_tempat"
        app:layout_constraintStart_toEndOf="@id/tv_nama_tempat"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>